.mask-wrapper{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.12);
  z-index: 99;
}
.mask-content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 400rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.user-btn{
  background: #1296db;
  font-size: 32rpx;
  line-height: 32rpx;
  padding: 20rpx 36rpx;
  color: #fff;
  margin-top: 30rpx;
}